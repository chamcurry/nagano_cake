<div class="container">
  <div class="row my-3 mx-5 h4">
    <div class="col">ショッピングカート</div>
    <div class="col d-flex justify-content-end">
     <%=link_to "カートを空にする",cart_items_destroy_all_path,method: :delete,data:{confirm: "本当に消しますか？"},class: "btn btn-danger btn-sm" %>
    </div>
  </div>
  <table class="table table-bordered">
        <thead class="bg-light">
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
        <% @cart_item.each do |cart_item| %>
          <tr>
            <td>
              <%=image_tag cart_item.item.image,size: "200x200" %>
              <%=cart_item.item.name%>
            </td>
            <td><%=(cart_item.item.price*1.1).floor.to_s(:delimited) %></td>
            <td><%=(cart_item.item.price*1.1).floor%></td>
          </tr>
        <% end %>
        </tbody>
      </table>
</div>