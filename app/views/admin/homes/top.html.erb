<div class="container">
  <div class="row">
    <div class="col">
       <h4>注文履歴一覧</h4>
        </div>
      <table class="table">
        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <!--注文履歴詳細ページへのリンクを付与する-->
            <td><%= order.created_at %></td>
            <td><%= order.customer.full_name %></td>
            <td><%= order.cart_item.amount %></td>
            <!--注文ステータス-->
            <td><%#order.order_status %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>