<div class="container">
  <div class="row">
    <div class="col">
       <div class="h4 my-3">注文履歴一覧</div>
        </div>
      <table class="table">
        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <!--<th>注文ステータス</th>-->
          </tr>
        </thead>
        <tbody>
          <% @order.each do |detail| %>
          <tr>
            <!--注文履歴詳細ページへのリンクを付与する-->
            <td><%= link_to detail.created_at,admin_order_path(detail) %></td>
            <td><%= detail.order.customer.first_name + detail.order.customer.last_name %></td>
            <td><%= detail.amount %></td>
            <!--注文ステータス-->
            <td><%#order.order_status %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
 <%=paginate @order,theme: 'twitter-bootstrap-4' %>
  </div>
</div>
