<div class="container">
  <div class="row">
    <div class="col">
      <h3>管理者ログイン</h3>
        <%= form_with model: @admin,url: admin_session_path do |f| %>
          <div class="field">
            メールアドレス
            <%= f.text_field :email %>
          </div>
          <div class="field">
            パスワード
            <%= f.password_field :password, autocomplete: "current-password" %>
          </div>
          <!--<% if devise_mapping.rememberable? %>-->
          <!--  <div class="field">-->
          <!--    <%= f.check_box :remember_me %>-->
          <!--    <%= f.label :remember_me %>-->
          <!--  </div>-->
          <!--<% end %>-->
          <div class="actions mt-20">
            <%= f.submit "ログイン",class:"btn btn-info"%>
          </div>
        <% end %>
        <%= render "admin/shared/links" %>
    </div>
  </div>
</div>