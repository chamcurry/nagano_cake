<h3>
   <%= @customer.first_name %><%= @customer.last_name %>さんの会員情報編集
</h3>
 <p class="group">
  会員ID <%=@customer.id %>
 </p>

<%= form_with model: @customer,url: admin_customer_path(@customer) do |f| %>

  <div class="field">
    <%= f.label "名前" %>
    <%= f.text_field :first_name %><%= f.text_field :last_name %>
  </div>

  <div class="field">
    <%= f.label "フリガナ" %>
    <%= f.text_field :first_name_kana %><%= f.text_field :last_name_kana %>
  </div>

  <div class="field">
    <%=f.label "郵便番号" %>
    <%=f.text_field :postal_code %>
  </div>

  <div class="field">
    <%=f.label "住所" %>
    <%=f.text_field :address %>
  </div>

  <div class="field">
    <%=f.label "電話番号" %>
    <%=f.text_field :telephone_number %>
  </div>

   <div class="field">
    <%= f.label "メールアドレス" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label "会員ステータス"%>
    <!--ここに会員ステータスが渡ったラジオボタンを記述-->
    <%= f.radio_button :is_active,"有効",:checked =>true %>有効
    <%= f.radio_button :is_active,"退会",:checked =>false %>退会
  </div>

  <div class="actions">
    <%= f.submit "変更を保存",class: "btn btn-success" %>
  </div>
<% end %>