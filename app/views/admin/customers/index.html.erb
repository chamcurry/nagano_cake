<div class="container">
  <div class="row">
    <div class="col">
       <h4>会員一覧</h4>
        </div>
      <table class="table">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>退会ステータス</th>
          </tr>
        </thead>
        <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td>
              <%=link_to admin_customer_path(customer) do %>
               <%=customer.first_name %>
              <% end %>
            </td>
            <td><%= customer.email %></td>
            <!--下に退会ステータスを表示する-->
            <td><%= customer.is_active %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>