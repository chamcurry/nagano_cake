<div class="container">
  <div class="row h4 my-3 ml-5">注文履歴詳細</div>

  <div class="row my-2 ">
    <div class="font-weight-bold mx-0">購入者</div>
    <div class="col ml-5"><%=@order.customer.first_name + @order.customer.last_name%></div>
  </div>

  <div class="row my-2">
    <div class="font-weight-bold mx-0">注文日</div>
    <div class="col ml-5"><%=@order.created_at%></div>
  </div>

  <div class="row my-2">
    <div class="font-weight-bold mx-0">配送先</div>
    <div class="col ml-5"><%=@order.order_deliveries%></div>
  </div>

  <div class="row mt-2 mb-4">
    <div class="font-weight-bold mx-0">支払方法</div>
    <div class="col ml-4 "><%=@order.pay_method_i18n%></div>
  </div>

  <div class="row">
    <table class="table table-bordered col-9">
      <tr>
        <thead class="bg-light">
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
        </thead>
        <tbody>
        <% @order_details.each do |detail| %>
          <tr>
           <td><%=detail.item.name%></td>
           <td><%=detail.item.with_tax_price%></td>
           <td><%=detail.amount%></td>
           <td><%=detail.item_price%></td>
          </tr>
        <% end %>
        </tbody>
      </tr>
    </table>
    <div class="row">
     <div class="font-weight-bold ml-4">商品合計</div>
     <div class="ml-5">
      <%@total = 0%>
          <%@order_details.each do |order_detail|%>
            <%@total += order_detail.item_price%>
          <%end%>
      <%=@total.to_s(:delimited)%>円
     </div>
       <div class="font-weight-bold ml-5">送料</div>
       <div class=" ml-5">800円</div>
       <div class="font-weight-bold ml-5">請求金額</div>
       <div class=" ml-5"><%=(@total + 800).to_s(:delimited)%>円</div>
    </div>
  </div>
</div>