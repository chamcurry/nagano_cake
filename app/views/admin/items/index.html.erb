<div class="container">
  <div class="row">
    <div class="col">
       <div class="h3 mt-5">商品一覧</div>
        <div class="float-right  mr-5 mb-3">
         <%=link_to "＋",new_admin_item_path,class: "btn  rounded-circle text-secondary shadow-sm"%>
        </div>
      <table class="table">
        <thead class="bg-light">
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>販売ステータス</th>
          </tr>
        </thead>
        <tbody>
        <% @kaminari.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td>
              <%=link_to admin_item_path(item) do %>
               <%=item.name %>
              <% end %>
            </td>
            <td><%= item.price.to_s(:delimited) %></td>
            <!--genreのnameカラムを表示-->
            <td><%= item.genre.name %></td>
            <td><%= item.is_active_i18n %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
    <%= paginate @kaminari,theme: 'twitter-bootstrap-4' %>
</div>