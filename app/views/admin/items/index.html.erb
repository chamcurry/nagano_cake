<div class="container">
  <div class="row">
    <div class="col">
       <h4>商品一覧</h4>
        <div class="float-right mb-3">
         <%=link_to "＋",new_admin_item_path,class: "btn btn-info rounded-circle" %>
        </div>
      <table class="table">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td>
              <%=link_to admin_item_path(item) do %>
               <%=item.name %>
              <% end %>
            </td>
            <td><%= item.price %></td>
            <!--genreのnameカラムを表示-->
            <td><%= item.name %></td>
            <td><%= item.is_active %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>