<div class="container">
      <div class="h4  my-3">商品詳細</div>
  <div class="row">
    <div class="row">
      <div class="item-image">
        <%=image_tag @item.image,size:"350x250" %>
      </div>
    </div>

    <div class="col">
      <div class="row ml-4">
        商品名
        <div class="col mb-3 ml-4">
         <%=@item.name %>
        </div>
      </div>
      <div class="row ml-4">
        商品説明
        <div class="col mb-3 ml-2">
         <%=@item.introduction %>
        </div>
      </div>
      <div class="row ml-4">
        ジャンル
        <div class="col mb-3 ml-2">
         <%=@item.genre.name %>
        </div>
      </div>

      <div class="row ml-4">
        税込価格
        <div class="col ml-2">
         <%= @item.add_tax_price.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円
        </div>
      </div>
      <div class="row mb-3 ml-3">
       (税抜価格)
      </div>

      <div class="row ml-4">
        販売ステータス
        <div class="col  mb-3 ml-2">
         <%=@item.is_active %>
        </div>
      </div>

      <%=link_to "編集する",edit_admin_item_path(@item),class: "btn btn-success ml-4 my-2" %>
    </div>
  </div>
</div>