<div class="container">
  <div class="row">
    <div class="col">
      <h3>商品詳細</h3>
      <div class="item-image">
        <%=image_tag @item.image,size:"300x200" %>
      </div>
      <div class="group">
        商品名 <%=@item.name %>
      </div>
      <div class="group">
        商品説明 <%=@item.introduction %>
      </div>
      <div class="group">
        <!--ここにジャンル-->
        ジャンル <%=@item.genre.name %>
      </div>
      <div class="group">
        <div>
        税込価格 <%= @item.add_tax_price.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円
        </div>
        (税抜価格)
      </div>
      <div class="group">
        販売ステータス <%=@item.is_active %>
      </div>
      <%=link_to "編集する",edit_admin_item_path(@item),class: "btn btn-success" %>
    </div>
  </div>
</div>