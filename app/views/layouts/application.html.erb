<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1">
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
        <div class="container">
          <span class="navbar-brand">
            <!--ここにロゴを入れる-->
          </span>
         <div class="row">

          <% if admin_signed_in? %>
            <div>
              <a class="nav-link" href="/admin/items">商品一覧</a>
            </div>
            <div>
              <a class="nav-link" href="/admin/customers">顧客一覧</a>
            </div>
            <div>
              <a class="nav-link" href="/orders">注文履歴一覧</a>
            </div>
            <div>
              <a class="nav-link" href="/admin/genres">ジャンル</a>
            </div>
            <div>
             <%=link_to "ログアウト",destroy_admin_session_path, method: :delete,class: "nav-link" %>
            </div>
          <% else %>
            <div>
             <a class="nav-link" href="/about">about</a>
           </div>
           <div>
             <a class="nav-link" href="/admin/items">商品一覧</a>
           </div>
           <div>
             <a class="nav-link" href="/admin/items/new">新規登録</a>
           </div>
           <div>
             <a class="nav-link" href="/admin/sign_in">ログイン</a>
           </div>
          <% end %>
         </div>
        </div>
    </header>
    <%= yield %>
  </body>
</html>
